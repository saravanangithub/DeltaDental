<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
 <style name="standardButton">
     <item name="android:textStyle">normal</item>
     <item name="android:layout_height">wrap_content</item>
     <item name="android:textSize">14sp</item>
      <item name="android:padding">0dip</item>      
      <item name="android:layout_width">0px</item>   
       <item name="android:textColor">#ffffff</item>  
       <item name="android:background">#694489</item>
       <item name="android:gravity">center</item>
 </style>
 
 <style name="standardEditText">
     
  
    <item name="android:textStyle">normal</item>
     <item name="android:layout_height">wrap_content</item>
     <item name="android:textSize">14sp</item>
      <item name="android:singleLine">true</item>      
      <item name="android:layout_width">0px</item>   
       <item name="android:paddingLeft">10dip</item> 

 </style>
 
  <style name="standardTextView">
     
     <item name="android:textSize">14sp</item>
     <item name="android:layout_height">wrap_content</item>
     <item name="android:gravity">left</item>
      <item name="android:singleLine">true</item>      
      <item name="android:layout_width">0px</item>   
       <item name="android:paddingLeft">10dip</item> 

 </style>
 
  <style name="invisibleTextView">
    
     <item name="android:layout_height">wrap_content</item>
     <item name="android:layout_width">0px</item>
     <item name="android:visibility">invisible</item>     

 </style>
 
  <style name="standardTableRow">
        <item name="android:layout_height">wrap_content</item>
     <item name="android:layout_width">match_parent</item>
       
  </style>
   <style name="standardTableLayout">
        <item name="android:layout_height">wrap_content</item>
     <item name="android:layout_width">match_parent</item>
       
  </style>
    <style name="titleTextView" parent="standardTextView">
      <item name="android:textSize">18sp</item>
       
  </style>
</resources>
